# Change window focus
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# change focus between external displays (left and right)
alt - s: yabai -m display --focus west
alt - d: yabai -m display --focus east

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# Focus alternate
alt - a : yabai -m space --focus recent

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
alt - return : yabai -m window --toggle zoom-fullscreen
alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - b : yabai -m space --balance

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# Move across monitors
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - d : yabai -m window --display east; yabai -m display --focus east;

# move window to space #
shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1;
shift + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2;
shift + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3;
shift + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4;
shift + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5;
shift + alt - 6 : yabai -m window --space 6; yabai -m space --focusor6;

alt + shift - q : yabai -m window --close;

ctrl + alt - r : yabai --restart-service; skhd --restart-service

ctrl + alt - h : yabai -m window west --resize right:-160:0 2> /dev/null || yabai -m window --resize right:-80:0
ctrl + alt - j : yabai -m window north --resize bottom:0:160 2> /dev/null || yabai -m window --resize bottom:0:80
ctrl + alt - k : yabai -m window south --resize top:0:-160 2> /dev/null || yabai -m window --resize top:0:-80
ctrl + alt - l : yabai -m window east --resize left:160:0 2> /dev/null || yabai -m window --resize left:80:0

shift + alt - return : open -n -a 'Alacritty.app'
shift + alt - e : open ~/

# Switch workspaces
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
